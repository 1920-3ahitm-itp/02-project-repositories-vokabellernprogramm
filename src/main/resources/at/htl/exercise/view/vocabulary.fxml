<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.WordController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="" text="VocabularyProgramm">
               <font>
                  <Font size="24.0" />
               </font>
               <VBox.margin>
                  <Insets left="200.0" />
               </VBox.margin>
            </Label>
            <TableView fx:id="tableView" prefHeight="285.0" prefWidth="580.0">
              <columns>
                <TableColumn fx:id="germanColumn" prefWidth="300.80001866817474" text="German" />
                <TableColumn fx:id="englishColumn" prefWidth="280.0000305175781" text="English" />
              </columns>
            </TableView>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="addedCategory" promptText="Category" text="type in your word">
                     <HBox.margin>
                        <Insets right="20.0" top="50.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="addButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="51.0" text="Add">
                     <HBox.margin>
                        <Insets top="50.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="switchButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="135.0" text="Switch for checking">
                     <HBox.margin>
                        <Insets left="260.0" top="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
